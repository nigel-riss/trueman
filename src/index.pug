                            img(src="./img/services/scisors.svg", alt="").service__icon-black
                        h3.service__title Стрижка
                        p.service__subtitle Мужская и Детская
                        a(href="#").service__more Подробнее

                    .service__cover
                    .service__image: img(src="./img/services/haircut.jpg", alt="Мужская стрижка")
                
                article.service
                    header.service__header
                        .service__icon
                            img(src="./img/services/razor-white.svg", alt="").service__icon-white
                            img(src="./img/services/razor.svg", alt="").service__icon-black
                        h3.service__title Бритьё
                        p.service__subtitle Классическое и Королевское
                        a(href="#").service__more Подробнее

                    .service__cover
                    .service__image: img(src="./img/services/shave.jpg", alt="Бритьё бороды")

                article.service
                    header.service__header
                        .service__icon
                            img(src="./img/services/lotion-white.svg", alt="").service__icon-white
                            img(src="./img/services/lotion.svg", alt="").service__icon-black
                        h3.service__title Магазин
                        p.service__subtitle Уход и Аксессуары
                        a(href="#").service__more Подробнее

                    .service__cover
                    .service__image: img(src="./img/services/shop.jpg", alt="Магазин аксессуаров барбершопа")

